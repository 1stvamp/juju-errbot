description "Errbot chat bot daemon"

start on (local-filesystems and net-device-up IFACE=eth0)
stop on runlevel [!12345]

# If the process quits unexpectadly trigger a respawn
respawn
respawn limit 15 5

setuid {{ user }}
setgid {{ group }}
chdir {{ working_dir }}

exec {{ venv_path }}/bin/errbot --config {{ config_path }}
